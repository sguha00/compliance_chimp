<%= form_for(proof, role: "form") do |form| %>
  <% if form.object.errors.any? %>
    <div class="panel panel-danger" id="error_explanation">
      <div class="panel-heading">
        <%= pluralize(form.object.errors.count, "error") %> prohibited
        this post from being saved:
      </div>
      <div class="panel-body">
        <ol>
          <% form.object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ol>
      </div>
    </div>
  <% end %>
  <%= form.text_field :note, placeholder: "Out of scope for this requirement" %>
  <br>
  <br>
  <%= link_to "Cancel", requirements_path, class: "btn btn-default cancel-proof-changes" %>
  <%= form.filepicker_field :filepicker_url, services: "COMPUTER", button_class: "btn btn-default" %>
  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
